{
  "name": "R and Python Development",
  "image": "rocker/rstudio:latest", // Base image with R and RStudio pre-installed
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.9" // Python version
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Ikuyadeu.r", // R extension for VS Code
        "ms-python.python", // Python extension
        "ms-toolsai.jupyter", // Jupyter Notebook extension
        "quarto.quarto", // Quarto extension for RMarkdown
        "yzhang.markdown-all-in-one" // Markdown support
      ],
      "settings": {
        "r.rterm.windows": "/usr/bin/R", // Path to R
        "r.rpath.lsp": "/usr/bin/R", // Path to R for language server
        "python.pythonPath": "/usr/bin/python3" // Path to Python
      }
    }
  },
  "postCreateCommand": "Rscript -e 'install.packages(c(\"tidyverse\", \"igraph\", \"rmarkdown\", \"knitr\"))' && pip install jupyterlab",
  "build": {
        "dockerfile": "Dockerfile"
    },
  "mounts": [
    "source=/workspace,target=/workspace,type=bind"
  ]
  
}

